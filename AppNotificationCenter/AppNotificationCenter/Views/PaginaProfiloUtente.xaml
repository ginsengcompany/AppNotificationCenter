<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppNotificationCenter.Views.PaginaProfiloUtente" Title="Info personali">
    <ContentPage.ToolbarItems>

        <ToolbarItem 
            Text="Modifica"
            Order="Primary"
            Command="{Binding ModificaInfo}"
            Priority="0"
            IsEnabled="{Binding IsEnabledModifica}"/>

    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Nome" FontAttributes="Bold"></Label>
            <Entry Placeholder="Nome" Text="{Binding UtenteProfilo.nome}" IsEnabled="False"></Entry>
            <Label Text="Cognome" FontAttributes="Bold"></Label>
            <Entry Placeholder="Cognome" Text="{Binding UtenteProfilo.cognome}" IsEnabled="False"></Entry>
            <Label Text="Specializzazione" FontAttributes="Bold"></Label>
            <Entry Placeholder="Specializzazione" Text="{Binding UtenteProfilo.specializzazione}" IsEnabled="False"></Entry>
            <Label Text="Provincia" FontAttributes="Bold"></Label>
            <Entry Placeholder="provincia" Text="{Binding UtenteProfilo.provincia}" IsEnabled="False"></Entry>
            <Label Text="Numero telefono" FontAttributes="Bold"></Label>
            <Entry Placeholder="Numero telefono" Text="{Binding UtenteProfilo.numero_telefono, Mode=TwoWay}" IsEnabled="{Binding IsEnabled}"></Entry>
            <Label Text="E-mail" FontAttributes="Bold"></Label>
            <Entry Placeholder="E-Mail" Text="{Binding UtenteProfilo.mail, Mode=TwoWay}" IsEnabled="{Binding IsEnabled}"></Entry>
            <Label Text="Pec" FontAttributes="Bold"></Label>
            <Entry Placeholder="Pec" Text="{Binding UtenteProfilo.pec, Mode=TwoWay}" IsEnabled="{Binding IsEnabled}"></Entry>
            <StackLayout Orientation="Horizontal" VerticalOptions="End" HorizontalOptions="EndAndExpand">
                <Button Text="Conferma" IsVisible="{Binding IsEnabled}" Command="{Binding btnConferma}"/>
                <Button Text="Annulla" IsVisible ="{Binding IsEnabled}" Command="{Binding btnAnnulla}"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>