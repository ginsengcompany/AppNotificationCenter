<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppOrdineMediciCaserta.Views.PaginaEventiAccettati">
    <ContentPage.Content>
        <ListView x:Name="ListaEventi">  
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Orientation="Vertical">
                            <Label Text="{Binding Titolo}"></Label>
                            <Label Text="{Binding Informazione}"></Label>
                            <StackLayout>
                                <Label Text="{Binding Luogo}"></Label>
                                <Label Text="{Binding Data}"></Label>
                            </StackLayout>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </ContentPage.Content>
</ContentPage>